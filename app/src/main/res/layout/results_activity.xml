<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/color_gradient"
    android:id="@+id/RLResults"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/RLCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:background="@color/White">

    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/CardViewResults"
        android:layout_width="360dp"
        android:layout_height="520dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        app:cardBackgroundColor="@color/White"
        app:cardCornerRadius="10dp"
        app:cardElevation="7dp">


        <ScrollView
            android:id="@+id/ScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/RLGetStudents"
                    android:layout_width="match_parent"

                    android:layout_height="match_parent">

                    <TableLayout
                        android:id="@+id/tableRes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">


                    </TableLayout>

                    <TextView
                        android:id="@+id/pairingResults"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="150dp"
                        android:textSize="14dp" />


                </RelativeLayout>
            </LinearLayout>
        </ScrollView>


    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/btnDeleteRes"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/drawable_button"
        android:fontFamily="@font/newfont"
        android:text="מחק נתונים"
        android:textSize="29dp" />

</RelativeLayout>